    <title xmlns="http://www.w3.org/1999/html">Order Lookup</title>
</head>
<body>
<%- include('parts/navbar.ejs') %>
<div class="container font py-3 px-3">
    <form method="post">
    <div class="input-group mb-3 ">
        <input type="text" class="form-control border-dark " placeholder="Order#" name = 'oid' aria-label="Order#" aria-describedby="button-addon2">
        <div class="input-group-append">
            <button class="btn btn-outline-secondary border-dark" type="submit" id="button-addon2"><i class="fas fa-search"></i> <b>Search</b></button>
        </div>
    </div>
    </form>
    <% if( typeof success !== 'undefined' ){ %>
    <div class="card border-dark card mb-3" style="max-width: 30rem;background-color:bisque">
        <div class="card-header">
            <h3>Order#: <%= order[0].oid ? order[0].oid:'' %>  <i class="fas fa-pizza-slice"></i></h3>
        </div>
        <div class="card-body text-dark">
            <h5 class="card-title ">訂單資料:</h5>
            <p class="card-text-weight-bold container">
                姓名: <%= order[0].name ? order[0].name:'' %><br>
                E-mail: <%= order[0].email ? order[0].email:'' %><br>
                手機號碼: <%= order[0].cellnumber ? order[0].cellnumber:'' %><br>
                下單時間: <%= order[0].odate ? order[0].odate:''%><br>
                配料:
            </p>
        </div>

    </div>
    <% } %>






</div>
